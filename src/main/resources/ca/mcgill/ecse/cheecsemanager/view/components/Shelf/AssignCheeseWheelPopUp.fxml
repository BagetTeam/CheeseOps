<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.StyledButton?>
<VBox
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.shelf.AssignCheeseWheelController"
    spacing="16"
    alignment="TOP_CENTER"
    styleClass="w-xs"
    fx:id="root"
>
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Cheese:" styleClass="text-fg, text-sm" />
        <ComboBox fx:id="cheeseCombo" styleClass="combo-box" />
    </VBox>

    <HBox spacing="8" alignment="CENTER_LEFT">
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Row:" styleClass="text-fg, text-sm" />
            <ComboBox fx:id="rowCombo" />
        </VBox>
        <VBox spacing="8" HBox.hgrow="ALWAYS">
            <Label text="Column:" styleClass="text-fg, text-sm" />
            <ComboBox fx:id="colCombo" />
        </VBox>
    </HBox>

    <HBox spacing="8" alignment="CENTER_RIGHT">
        <StyledButton
            fx:id="assignButton"
            text="Assign"
            variant="PRIMARY"
            disable="true"
        />
    </HBox>

</VBox>
