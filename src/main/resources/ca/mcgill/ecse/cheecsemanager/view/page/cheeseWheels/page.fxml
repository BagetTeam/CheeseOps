<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.*?>
<StackPane
    fx:id="root"
    id="root"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.CheeseWheelsController"
>
    <BorderPane style="-fx-padding: 36 16">
        <center>
            <VBox fx:id="mainContainer" spacing="20" maxWidth="768">
                <Label
                    text="Cheese Wheels"
                    styleClass="text-lg, text-fg, text-bold"
                />

                <HBox alignment="CENTER_LEFT">
                    <Label
                        fx:id="inventoryLabel"
                        text="Current Cheese Inventory: 0"
                        styleClass="text-fg"
                    />
                    <Region HBox.hgrow="ALWAYS" />

                    <StyledButton
                        text="Assign All"
                        variant="PRIMARY"
                        onAction="#assignAllCheeseWheels"
                    />

                </HBox>


                <TableView
                    fx:id="table"
                    styleClass="farmer-table"
                    VBox.vgrow="ALWAYS"
                >
                    <columns>
                        <TableColumn
                            fx:id="idColumn"
                            text="ID"
                            prefWidth="20"
                        />
                        <TableColumn
                            fx:id="monthsAgedColumn"
                            text="Months Aged"
                            prefWidth="120"
                        />
                        <TableColumn
                            fx:id="isSpoiledColumn"
                            text="Spoiled"
                            prefWidth="50"
                        />
                        <TableColumn
                            fx:id="purchaseDateColumn"
                            text="Purchase Date"
                            prefWidth="150"
                        />
                        <TableColumn
                            fx:id="actionColumn"
                            text="Actions"
                            prefWidth="188"
                        />
                    </columns>

                   <columnResizePolicy>
                      <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                   </columnResizePolicy>

                    <placeholder>
                        <Label
                            text="No cheese wheels currently available"
                            style="-fx-font-size: 16px; -fx-text-fill: -color-muted; -fx-padding: 20;"
                            alignment="CENTER"
                        />
                    </placeholder>
                </TableView>
            </VBox>
        </center>
    </BorderPane>
</StackPane>
