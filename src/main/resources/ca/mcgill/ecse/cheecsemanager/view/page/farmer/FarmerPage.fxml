<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity"
            maxWidth="-Infinity"
            minHeight="-Infinity"
            minWidth="-Infinity"
            prefHeight="400.0"
            prefWidth="600.0"
            xmlns="http://javafx.com/javafx/17.0.2-ea"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:id="farmerRoot"
            fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.Farmer.FarmerController">
    <ScrollPane fitToWidth="true" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <Button text="Add Farmer" onAction="#addFarmer"/>
            <FlowPane fx:id="cardsContainer" hgap="20.0" vgap="20.0"/>
        </VBox>
    </ScrollPane>
</AnchorPane>
