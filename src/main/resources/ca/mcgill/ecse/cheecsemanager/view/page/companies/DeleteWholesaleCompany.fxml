<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.*?>
<VBox
    fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.wholesaleCompany.DeleteWholesaleCompanyController"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    spacing="16"
    styleClass="w-sm"
    fx:id="root"
> 
    <!-- Company Info Display -->
    <VBox spacing="20" styleClass="bg-darker-bg, rounded-md, p-xl">
        <!-- Company Name with Factory Icon -->
        <HBox alignment="CENTER" spacing="10">
            <Icon icon="Company" />
            <Label
                fx:id="companyNameLabel"
                text="Ewen's Company"
                style="-fx-text-fill: -color-fg; -fx-font-size: 18px; -fx-font-weight: 600;"
            />
        </HBox>
        
        <!-- Address -->
        <VBox spacing="6">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Icon icon="Marker" />
                <Label
                    fx:id="companyAddressLabel"
                    text="123 Sigma Street, Montreal"
                    styleClass="text-fg"
                    wrapText="true"
                    maxWidth="350"
                />
            </HBox>
            
            <!-- Number of Orders -->
            <HBox alignment="CENTER_LEFT" spacing="10">
                <Icon icon="Cargo" />
                <Label
                    fx:id="ordersCountLabel"
                    text="14"
                    styleClass="text-fg"
                />
            </HBox>
        </VBox>
    </VBox>

    <Label
        fx:id="errorLabel"
        styleClass="text-destructive"
        visible="false"
        managed="false"
        wrapText="true"
    />
    
    <!-- Buttons -->
    <HBox spacing="12" alignment="CENTER_RIGHT">
        <StyledButton text="Cancel" onAction="#handleClose" />
        <StyledButton
            text="Delete"
            variant="DESTRUCTIVE"
            onAction="#handleDelete"
        />
    </HBox>
    
</VBox>
