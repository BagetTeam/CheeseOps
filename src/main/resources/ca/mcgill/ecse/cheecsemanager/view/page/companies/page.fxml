<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.*?>
<StackPane
    fx:id="companiesPageRoot"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.wholesaleCompany.WholesaleCompanyPageController"
    style="-fx-padding: 36 16"
    alignment="TOP_CENTER"
>
    <VBox maxWidth="832" spacing="20">
        <Label
            text="Wholesale Company Management"
            styleClass="text-lg, text-fg, text-bold"
        />
            
        <!-- Search and Add Button -->
        <HBox spacing="12" alignment="CENTER_LEFT">
            <!-- Search Bar -->
            <Input
                placeholder="Search companies"
                fx:id="searchInput"
                variant="OUTLINED"
                HBox.hgrow="ALWAYS"
            >
                <icon>
                    <Icon icon="Search" />
                </icon>
            </Input>
                
            <StyledButton
                fx:id="addCompanyBtn"
                variant="PRIMARY"
                text="Add Company"
                onAction="#handleAddCompany"
            />
        </HBox>
        
        <!-- Company Cards Grid -->
        <ScrollPane VBox.vgrow="ALWAYS" maxWidth="Infinity" fitToWidth="true">
            <VBox fx:id="cardsContainer" spacing="16" />
        </ScrollPane>
    </VBox>
</StackPane>
