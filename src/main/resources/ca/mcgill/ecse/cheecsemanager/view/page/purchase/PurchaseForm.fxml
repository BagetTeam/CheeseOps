<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="8.0"
	fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controller.purchase.PurchaseFormController">
		<children>
			<ScrollPane maxWidth="400" fitToWidth="true" fitToHeight="true" >
				<content>
                    <VBox spacing="12.0" maxWidth="400">
                        <padding>
                            <Insets top="16" bottom="16"/>
                        </padding>
                        <HBox alignment="CENTER">
							<Label fx:id="labelId" minWidth="140" prefWidth="140" />
							<TextField fx:id="inputFieldId" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
							<Label fx:id="labelTransactionDate" minWidth="140" prefWidth="140" />
							<DatePicker fx:id="inputFieldTransactionDate" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
							<Label fx:id="labelNrCheeseWheels" minWidth="140" prefWidth="140" />
							<TextField fx:id="inputFieldNrCheeseWheels" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
							<Label fx:id="labelMonthsAged" minWidth="140" prefWidth="140" />
							<ChoiceBox fx:id="choiceBoxMonthsAged" maxWidth="Infinity" HBox.hgrow="ALWAYS" />
                        </HBox>
                        <HBox alignment="CENTER">
                    		<Label fx:id="labelFarmer" minWidth="140" prefWidth="140" />
                    		<Button fx:id="buttonSelectFarmer" mnemonicParsing="false" maxWidth="Infinity" onAction="#onSelectFarmer" text="Select â†µ" HBox.hgrow="ALWAYS" />
                        </HBox>
                    </VBox>
				</content>
			</ScrollPane>
			<Text fx:id="textError"/>
			<HBox alignment="CENTER" spacing="16.0">
				<children>
					<Button fx:id="buttonSave" mnemonicParsing="false" onAction="#onSave" text="Save" styleClass="add-button" />
					<Button fx:id="buttonCancel" mnemonicParsing="false" onAction="#onCancel" text="Cancel" />
				</children>
			</HBox>
		</children>
</VBox>
