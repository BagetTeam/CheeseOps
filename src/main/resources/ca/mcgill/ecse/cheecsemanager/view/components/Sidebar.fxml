<?xml version="1.0" encoding="UTF-8" ?>
<!-- @author Ming Li Liu -->
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.*?>
<VBox
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.SidebarController"
    spacing="8"
    styleClass="sidebar"
    VBox.vgrow="ALWAYS"
>
    <HBox
        style="-fx-background-color: -color-darker-bg"
        spacing="10"
        alignment="CENTER"
    >
        <Icon icon="logo" />
        <Label
            text="CheECSEManager"
            style="-fx-text-fill: -color-fg; -fx-font-size: 20px;"
        />
    </HBox>
    <StyledButton
        text="Shelves"
        fx:id="buttonShelves"
        onAction="#handleShelves"
        prefWidth="250"
        graphicTextGap="12"
        size="MD"
    >
        <graphic>
            <Icon icon="Warehouse" />
        </graphic>
    </StyledButton>
    <StyledButton
        fx:id="buttonFarmers"
        text="Farmers"
        onAction="#handleFarmers"
        prefWidth="250"
        graphicTextGap="12"
        size="MD"
    >
        <graphic>
            <Icon icon="Farmer" />
        </graphic>
    </StyledButton>
    <StyledButton
        fx:id="buttonCompanies"
        text="Companies"
        onAction="#handleCompanies"
        prefWidth="250"
        graphicTextGap="12"
        size="MD"
    >
        <graphic>
            <Icon icon="Factory" />
        </graphic>
    </StyledButton>
    <StyledButton
        fx:id="buttonRobot"
        text="Robot"
        onAction="#handleRobot"
        prefWidth="250"
        graphicTextGap="12"
        size="MD"
    >
        <graphic>
            <Icon icon="Robot" />
        </graphic>
    </StyledButton>
    <StyledButton
        fx:id="buttonCheeseWheels"
        text="CheeseWheels"
        onAction="#handleRobot"
        prefWidth="250"
        graphicTextGap="12"
        size="MD"
    >
        <graphic>
            <Icon icon="Cheese" />
        </graphic>
    </StyledButton>
    <StyledButton
        fx:id="buttonSettings"
        text="Settings"
        onAction="#handleSettings"
        prefWidth="250"
        graphicTextGap="12"
        size="MD"
    >
        <graphic>
            <Icon icon="Gear" />
        </graphic>
    </StyledButton>
</VBox>
