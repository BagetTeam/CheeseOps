<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.StyledButton?>
<VBox
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.controller.SidebarController"
    spacing="10"
    styleClass="sidebar"
    prefWidth="200"
    maxWidth="200"
    VBox.vgrow="ALWAYS"
>
    <padding>
        <Insets top="20" right="10" bottom="20" left="10" />
    </padding>
    <Button
        text="Dashboard"
        styleClass="nav-button"
        onAction="#handleDashboard"
    />
    <Button text="Users" styleClass="nav-button" onAction="#handleUsers" />
    <Button
        text="Settings"
        styleClass="nav-button"
        onAction="#handleSettings"
    />
    <Button text="Reports" styleClass="nav-button" onAction="#handleReports" />
</VBox>
