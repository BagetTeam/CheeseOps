<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.StyledButton?>

<fx:root type="javafx.scene.layout.VBox"
         xmlns:fx="http://javafx.com/fxml/1"
         xmlns="http://javafx.com/javafx/21"
         styleClass="farmer-card"
         spacing="16"
         alignment="TOP_CENTER"
         prefWidth="280"
         maxWidth="280"
         minWidth="280">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>
    
    <!-- Profile Icon -->
    <AnchorPane prefHeight="100.0" prefWidth="100.0">
        <Circle centerX="50.0" centerY="50.0" radius="50.0" style="-fx-fill: transparent; -fx-stroke: -color-muted; -fx-stroke-width: 2;"/>
        <SVGPath content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z" 
                 style="-fx-fill: -color-muted;" layoutX="15" layoutY="20" scaleX="3" scaleY="3"/>
    </AnchorPane>
    
    <Label fx:id="nameLabel" styleClass="name-label" style="-fx-text-fill: -color-fg; -fx-font-size: 18px; -fx-font-weight: bold;" wrapText="true" alignment="CENTER"/>
    <Label fx:id="emailLabel" style="-fx-text-fill: -color-muted; -fx-font-size: 13px;" wrapText="true" alignment="CENTER"/>
    
    <!-- Address with Icon -->
    <HBox alignment="CENTER" spacing="6">
        <SVGPath content="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" 
                 style="-fx-fill: -color-muted;" scaleX="0.7" scaleY="0.7"/>
        <Label fx:id="addressLabel" style="-fx-text-fill: -color-muted; -fx-font-size: 13px;" wrapText="true"/>
    </HBox>
    
    <!-- Cheese Count with Icon -->
    <HBox alignment="CENTER" spacing="6">
        <SVGPath content="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z" 
                 style="-fx-fill: -color-muted;" scaleX="0.7" scaleY="0.7"/>
        <Label fx:id="cheeseLabel" style="-fx-text-fill: -color-muted; -fx-font-size: 13px;"/>
    </HBox>
    
    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="12">
        <VBox.margin>
            <Insets top="8"/>
        </VBox.margin>
        <StyledButton fx:id="viewFarmerBtn" variant="DEFAULT" size="SM" text="View"/>
        <StyledButton fx:id="deleteFarmerBtn" variant="DESTRUCTIVE" size="SM" text="Delete"/>
    </HBox>
</fx:root>
