<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.shape.SVGPath?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.Icon?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.StyledButton?>
<fx:root
    type="javafx.scene.layout.VBox"
    xmlns:fx="http://javafx.com/fxml/1"
    xmlns="http://javafx.com/javafx/21"
    styleClass="farmer-card, p-xl"
    spacing="16"
    alignment="TOP_CENTER"
    prefWidth="280"
    maxWidth="280"
    minWidth="280"
    fx:id="farmerCard"
>
    
    <!-- Profile Icon -->
    <StackPane prefHeight="100.0" prefWidth="100.0">
        <Circle
            centerX="50.0"
            centerY="50.0"
            radius="50.0"
            style="-fx-fill: transparent; -fx-stroke: -color-muted; -fx-stroke-width: 2;"
        />
        <SVGPath
            content="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
            style="-fx-fill: -color-muted;"
            layoutX="15"
            layoutY="20"
            scaleX="3"
            scaleY="3"
        />
    </StackPane>
    
    <VBox alignment="TOP_LEFT" maxWidth="Infinity" spacing="4">
        <Label
            fx:id="nameLabel"
            styleClass="name-label, text-fg, text-bold"
            style="-fx-font-size: 18px;"
            wrapText="true"
            alignment="CENTER"
        />
        <Label fx:id="emailLabel" wrapText="true" alignment="CENTER" />
    </VBox>

    <VBox alignment="TOP_LEFT" maxWidth="Infinity" spacing="4">
        <!-- Address with Icon -->
        <HBox alignment="CENTER_LEFT" spacing="6">
            <children>
                <Icon icon="Marker" />
                <Label
                    fx:id="addressLabel"
                    wrapText="true"
                    alignment="CENTER_LEFT"
                />
            </children>
        </HBox>

        <!-- Cheese Count with Icon -->
        <HBox alignment="CENTER_LEFT" spacing="6">
            <children>
                <Icon icon="Cheese" />
                <Label fx:id="cheeseLabel" alignment="CENTER_LEFT" />
            </children>
        </HBox>
    </VBox>
    
    <!-- Action Buttons -->
    <HBox alignment="CENTER" spacing="12">
        <VBox.margin>
            <Insets top="8" />
        </VBox.margin>
        <StyledButton
            fx:id="viewFarmerBtn"
            variant="DEFAULT"
            size="SM"
            text="View"
        />
        <StyledButton
            fx:id="deleteFarmerBtn"
            variant="DESTRUCTIVE"
            size="SM"
            text="Delete"
        />
    </HBox>
</fx:root>
