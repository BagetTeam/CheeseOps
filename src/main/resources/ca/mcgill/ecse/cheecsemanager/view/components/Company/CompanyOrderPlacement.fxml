<?xml version="1.0" encoding="UTF-8" ?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import ca.mcgill.ecse.cheecsemanager.fxml.components.*?>
<VBox
    spacing="16"
    fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.wholesaleCompany.CompanyOrderPlacementController"
    xmlns="http://javafx.com/javafx/21"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:id="root"
    styleClass="w-xs"
>
  <!-- Maturation Period Dropdown -->
  <VBox spacing="8">
      <Label
            text="Maturation Period"
            style="-fx-text-fill: -color-fg; -fx-font-size: 14px;"
        />
    <ComboBox
            fx:id="maturationPeriodComboBox"
            promptText="Select aging period"
            prefWidth="440"
            styleClass="combo-box"
        />
  </VBox>

  <Input label="Quantity*" fx:id="quantityInput" variant="OUTLINED" />

  <!-- Purchase Date (Read-only) -->
  <VBox spacing="4">
    <Label
            text="Transaction Date"
            style="-fx-text-fill: -color-fg; -fx-font-size: 14px;"
        />
    <DatePicker
            fx:id="transactionDatePicker"
            promptText="Select transaction date"
            prefWidth="440"
            styleClass="styled-date-picker"
        />
  </VBox>

  <!-- Delivery Date -->
  <VBox spacing="4">
    <Label
            text="Delivery Date"
            style="-fx-text-fill: -color-fg; -fx-font-size: 14px;"
        />
    <DatePicker
            fx:id="deliveryDatePicker"
            promptText="Select delivery date"
            prefWidth="440"
            styleClass="styled-date-picker"
        />
  </VBox>

  <!-- Error Message from backend -->
  <Label
        fx:id="errorLabel"
        text=""
        wrapText="true"
        styleClass="text-destructive"
        visible="false"
        managed="false"
    />

  <!-- Buttons -->
  <HBox spacing="15" alignment="CENTER">
    <StyledButton
            text="Cancel"
            variant="MUTED"
            size="SM"
            onAction="#handleClose"
        />
    <StyledButton
            text="Place Order"
            variant="PRIMARY"
            size="SM"
            onAction="#handleSave"
        />
  </HBox>
</VBox>
