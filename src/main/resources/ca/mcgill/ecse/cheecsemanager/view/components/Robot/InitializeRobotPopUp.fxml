<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="220.0" prefWidth="300.0" stylesheets="@../../../style/main.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.Robot.ShelfIDPopUpController">
   <children>
      <TextField fx:id="userInput" alignment="CENTER" layoutX="62.0" layoutY="124.0" promptText="Shelf ID" style="-fx-background-color: white;" styleClass="search-input" />
      <Label alignment="CENTER" contentDisplay="CENTER" layoutX="51.0" layoutY="44.0" prefHeight="53.0" prefWidth="199.0" text="Please input a shelf ID" textFill="#b2adad">
         <font>
            <Font size="14.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="68.0" layoutY="155.0" prefHeight="62.0" prefWidth="166.0" spacing="20.0">
         <children>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancel" text="Cancel" />
            <Button fx:id="confirmShelfID" mnemonicParsing="false" onAction="#handleConfirm" text="Confirm" />
         </children>
      </HBox>
   </children>
</AnchorPane>
