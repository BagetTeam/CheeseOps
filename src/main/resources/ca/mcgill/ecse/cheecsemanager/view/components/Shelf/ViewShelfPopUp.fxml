<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.ViewShelfPopUpController"
            prefWidth="600" prefHeight="400">

    <VBox fx:id="mainContainer" spacing="10" AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"
          style="-fx-background-color: white; -fx-padding: 15; -fx-border-radius: 5; -fx-background-radius: 5;">

        <!-- Header with dynamic shelf label -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="shelfHeader" style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeBtn" text="Close"/>
        </HBox>

        <!-- Grid representing the shelf -->
        <GridPane fx:id="shelfGrid" hgap="10" vgap="10"/>

    </VBox>
</AnchorPane>