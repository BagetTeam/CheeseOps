<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="ca.mcgill.ecse.cheecsemanager.fxml.controllers.ViewShelfPopUpController"
            prefWidth="600" prefHeight="400"
            styleClass="view-shelf-popup">

    <VBox fx:id="mainContainer" spacing="15"
          AnchorPane.topAnchor="0"
          AnchorPane.bottomAnchor="0"
          AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0"
          styleClass="popup-container">

        <!-- Header with dynamic shelf label -->
        <HBox alignment="CENTER_LEFT" spacing="10">
            <Label fx:id="shelfHeader" styleClass="popup-title"/>
            <HBox HBox.hgrow="ALWAYS"/>
            <Button fx:id="closeBtn" text="Close" styleClass="popup-close-btn"/>
        </HBox>

        <!-- Centered Grid -->
        <StackPane HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" alignment="CENTER">
            <GridPane fx:id="shelfGrid" hgap="10" vgap="10" styleClass="shelf-grid" alignment="CENTER"/>
        </StackPane>
    </VBox>
</AnchorPane>